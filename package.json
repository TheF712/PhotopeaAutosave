{
  "name": "photopea",
  "version": "1.0.0",
  "description": "Photopea",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "photopea",
    "editor",
    "electron"
  ],
  "author": "soyeldf",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.photopea.autosave",
    "productName": "Photopea",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "icon.png",
      "icon.icns",
      "icon.ico"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
